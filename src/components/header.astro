---
import { Picture } from "astro:assets";
import flowersImage from "@/assets/flowers.png";

import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={flowersImage}
      alt="Flowers pattern"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      PatternBloom
    </h1>
    <p class="text-3xl mt-4 text-slate-600 max-w-xl">
      Unleash your inner artist: explore, color, and transform free geometric prints into stunning custom designs
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="/patterns"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bx-cloud-download" />
        Download Free Patterns
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://a.co/d/6NLqTdv?ref=patternbloom.com"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bx-book-alt" />
        Flower Patterns Book
      </Link>
    </div>
  </div>
</main>
